{
  "name": "srn-spaceships",
  "version": "1.0.0",
  "description": "Star Wars Spaceships API Backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\"",
    "dev:docker": "concurrently \"npm run dev:server\"",
    "dev:server": "tsx watch --inspect=0.0.0.0:9230 src/server/index.ts",
    "build": "npm run build:server",
    "build:server": "node esbuild.config.js",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts, --fix",
    "format": "prettier --write \"src/**/*.{ts,css,html}\"",
    "type-check": "tsc --noEmit",
    "dev:local": "npm run db:start && npm run dev"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "uuid": "^13.0.0",
    "wait-port": "^1.1.0",
    "zod": "^4.1.5"
    
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.11",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "tsx": "^4.20.5"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "useTabs": false
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
